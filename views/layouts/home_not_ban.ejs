    <script defer>
        $(document).ready(function(){
            $('.nutmua').click(function(){
                var id=$(this).data('id_product')
                var name = $('.product_name_' + id).val();
                var quantity=$('.soluongsp').val();
                var price=$('.giamoi').data('price');
                var image=$('.product-image').data('image')
                
                $.ajax({
                    url:"/add_cart_ajax",
                    method:'POST',
                    data:{
                        id:id,
                        name:name,
                        quantity:quantity,
                        price:price,
                        image:image
                    },
                    success: function() {
						alert('Đã thêm vào giỏ hàng ')
                        window.location='/cart'

					}
                   

                })
            })
        })

    </script>

    <script defer> 
        $(document).ready(function(){
            $('#checkout_cart').click(function(){
                
                var shipping_name=$('#inputName').val();
                var shipping_phone=$('#inputPhone').val();
                var shipping_email=$('#inputEmail').val();
                var shipping_address=$('#inputAddress').val();
                var shipping_province=$('#inputCity').val();
                var shipping_district=$('#inputDistrict').val();
                var shipping_notes=$('#inputNote').val();

                var shipping_method = $("input[name='shipping_method']:checked").val();
                var shipping_packet = $("input[name='goigiaohang']:checked").val();

                
                
                $.ajax({
                    url:"/checkout",
                    method:'POST',
                    data:{
                        shipping_name:shipping_name,
                        shipping_phone:shipping_phone,
                        shipping_email:shipping_email,
                        shipping_address:shipping_address,
                        shipping_province:shipping_province,
                        shipping_district:shipping_district,
                        shipping_notes:shipping_notes,
                        shipping_method:shipping_method,
                        shipping_packet:shipping_packet
                       
                    },
                    success: function() {
                        
						alert(' Mua hàng thành công')

					}
                })
              
               
            })
        })
    </script>
